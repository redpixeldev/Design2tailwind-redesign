---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
---

<Layout title='Astro'>
	<Header />

	<div class="pt-36 lg:pt-44 xl:pt-52">
		<div class="fancy-feature-fiftyOne relative">
			<div class="container">
				<div class="flex flex-wrap">
					<div class="wow fadeInLeft">
						<div class="title-style-five xl:mb-16 lg:mb-16 md:mb-16 sm:mb-10 xsm:mb-10">
							<div class="sc-title-two italic relative inline-block text-[17px] text-[color:var(--prime-ten)] mb-5 pl-10 before:content-[''] before:absolute before:w-6 before:h-px before:left-0 before:top-3.5 before:bg-[var(--prime-ten)]">Blog</div>
							<h2 class="font-Recoleta font-normal text-black xl:text-6xl lg:text-5xl text-4xl">Latest posts</h2>
							<p class="text-black text-xl pt-7">Check out our posts for the latest news, tutorials, <br/> tips and tricks for Tailwind CSS
							</p>
						</div>
					</div>
				</div>
			</div> <!-- /.container -->
			<img src="images/lazy.svg" data-src="images/shape/shape_172.svg" alt="" class="lazy-img shapes shape-two absolute z-[-1] right-[17%] 2xl:right-[8%] lg:right-[6%] md:!hidden sm:!hidden xsm:!hidden top-[4%]">
		</div>
	</div>

